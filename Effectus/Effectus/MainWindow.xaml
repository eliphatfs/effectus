<mah:MetroWindow
    x:Class="Effectus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Effectus"
    mc:Ignorable="d"
    Title="Effectus" Height="540" Width="960"
    WindowTransitionsEnabled="True">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button>
                <iconPacks:PackIconModern Kind="Film" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <DockPanel Background="#f6f6f6">

        <Menu x:Name="menuBar" DockPanel.Dock="Top">
            <MenuItem Header="_Dummy">
                <MenuItem Header="D_ummy" FontSize="12" />
                <MenuItem Header="Du_mmy" FontSize="12" />
            </MenuItem>
            <MenuItem Header="_Exit" Click="MenuItemExit_Click"></MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Viewbox Stretch="Uniform" StretchDirection="Both">
                    <Canvas Background="#eeffff" Width="1280" Height="720" ClipToBounds="True">
                        <Rectangle Fill="#b0a4c1" Canvas.Left="-50" Canvas.Top="100" Width="100" Height="100"></Rectangle>
                    </Canvas>
                </Viewbox>
            </Grid>
            <Grid Grid.RowSpan="4" Grid.Column="2" Background="#f2f2f2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <WrapPanel Background="#ede8ef">
                    <iconPacks:PackIconBootstrapIcons Kind="Tools" Foreground="#777" VerticalAlignment="Center" Margin="12,0,0,0" Width="14" Height="14" />
                    <Label Foreground="#777" FontWeight="Bold">
                        <TextBlock Padding="0,2" FontSize="13">PROPERTIES</TextBlock>
                    </Label>
                </WrapPanel>
            </Grid>
            <Grid Grid.Row="2" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Slider Style="{DynamicResource MahApps.Styles.Slider.Flat}" x:Name="progressSlider" VerticalAlignment="Top" Margin="10"></Slider>
                <ListView Grid.Row="1" Background="Transparent">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MahApps.Styles.ListViewItem}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderBrush" Value="#e9e9e9"></Setter>
                            <Setter Property="BorderThickness" Value="0,0,0,1"></Setter>
                            <Setter Property="Background" Value="#f6f6f6"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListViewItem>Test</ListViewItem>
                    <ListViewItem>Test</ListViewItem>
                    <ListViewItem>Test</ListViewItem>
                </ListView>
            </Grid>
            <GridSplitter Grid.RowSpan="4" Grid.Column="1" Margin="-4,0" BorderThickness="4,0" BorderBrush="Transparent" HorizontalAlignment="Stretch" Background="#ededf5" />
            <GridSplitter Grid.Row="1" Margin="0,-4" BorderThickness="0,4" BorderBrush="Transparent" VerticalAlignment="Stretch" Background="#ccc" />
        </Grid>
    </DockPanel>
</mah:MetroWindow>
